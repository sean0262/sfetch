#!/bin/bash

distro=$(cat /etc/os-release | head -1 | sed 's/"//g' | cut -d= -f2)
kernel=$(uname -r)
shell=$(echo `$SHELL --version` | cut -d'(' -f1)
uptime=$(uptime -p)
packages=$(dpkg-query -W | wc -l)
de=$(echo "$XDG_DATA_DIRS" | sed 's/.*\(xfce\|kde\|gnome\).*/\1/')
memory=$(free -hm | awk 'NR==2{printf "%s/%s\n", $3,$2}')

echo "OS: $distro"
echo "Kernel: $kernel"
echo "Shell: $shell"
echo "Uptime: $uptime"
echo "Packages: $packages"
echo "DE: $de"
echo "Memory: $memory"
